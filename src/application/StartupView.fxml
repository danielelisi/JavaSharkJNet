<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller">
   <top>
      <HBox fillHeight="false" spacing="20.0" BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="filePath" editable="false" focusTraversable="false" prefWidth="300.0" promptText=".pcap file path..">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </TextField>
            <Region HBox.hgrow="ALWAYS" />
            <Button fx:id="selectButton" mnemonicParsing="false" onAction="#chooseFile" text="Select File..">
               <HBox.margin>
                  <Insets />
               </HBox.margin>
            </Button>
            <Button fx:id="loadButton" mnemonicParsing="false" onAction="#loadFile" text="Load File" />
         </children>
         <BorderPane.margin>
            <Insets />
         </BorderPane.margin>
         <padding>
            <Insets bottom="25.0" left="25.0" right="25.0" top="25.0" />
         </padding>
      </HBox>
   </top>
   <center>
      <TableView fx:id="tableView" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="colServer" prefWidth="118.0" text="Server IP" />
          <TableColumn fx:id="colPackets" prefWidth="480.0" text="Total packets from Server" />
            <TableColumn fx:id="colTime" prefWidth="75.0" text="Transmission Time" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
</BorderPane>
